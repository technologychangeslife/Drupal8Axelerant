<section id="banner-slider">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
           <ul class="carousel-indicators">
              {% for result in view.result %}
              <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index-1 }}" class="{% if ( loop.index == 1 )  %}active{% endif %}"></li>
              {% endfor %}  
            </ul>
              <div class="carousel-inner" role="listbox">
            {% for result in view.result %}
                <div class="carousel-item {% if ( loop.index == 1 )  %}active{% endif %}">
                <img src="{{ file_url(view.field.uri.value(view.result[loop.index-1])) }}" alt="banner slider image" class="img-responsive">
                  <div class="carousel-caption d-none d-md-block mx-auto wow fadeInDown">
                    <p>{{ view.field.field_banner_sub_title.value(view.result[loop.index-1]) }}</p>
                    <h1>
                      {% autoescape false %}
                       {{ view.field.body.value(view.result[loop.index-1]) | striptags }}
                      {% endautoescape %}
                    </h1>
                    <a href="{{ view.field.view_node.value(view.result[loop.index-1])  }}" class="btn btn-infos">Read More</a>
                  </div>
                </div>

            {% endfor %}    
                    
              </div>
          </div>
    </section>
<!-- END BANNER SLIDER SECTION -->